<div class="container d-flex justify-content-center align-items-center vh-80">
  <div class="card p-4 shadow" style="background-color: #fff; max-width: 400px; width: 100%;">
    <h2 class="text-center mb-4" style="color: #e83e8c; font-size: 2rem;">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %> 



      <div class="mb-3">
        <%= f.label :email, class: "form-label", style: "color: #e83e8c;" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", style: "border-color: #e83e8c; color: #e83e8c;" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label", style: "color: #e83e8c;" %>
        <% if @minimum_password_length %>
        <em style="color: #e83e8c;">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", style: "border-color: #e83e8c; color: #e83e8c;" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label", style: "color: #e83e8c;" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", style: "border-color: #e83e8c; color: #e83e8c;" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn w-100", style: "background-color: #e83e8c; color: #fff; border: none;" %>
      </div>
    <% end %>

    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>